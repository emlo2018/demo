extends ../base.pug

block content
  h3 Customer
    small

  .btn-group
    a(href=`/customers/${customer.id}/edit`, class='btn btn-primary btn-sm')
      i.glyphicon.glyphicon-edit
      span  Edit customer
    a(href=`/customers/${customer.id}/delete`, class='btn btn-danger btn-sm')
      i.glyphicon.glyphicon-trash
      span  Delete customer

  .media
    .media-center
      img(class="img-fluid img-thumbnail" src=customer.imageUrl|| "https://picsum.photos/200/200")
    .media-body
      h5 Name: #{customer.name|| 'unknown'}
      h5 Alias: #{customer.alias||'unknown'}
      p Description: #{customer.description||'No description'}
      
